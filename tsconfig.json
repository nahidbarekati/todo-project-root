{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDir": "./apps",
    "paths": {
      "@todo-service/*": ["apps/todo-service/src/*"],
      "@user-service/*": ["apps/user-service/src/*"],
      //"@api-gateway/*": ["apps/api-gateway/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["apps/**/*", "libs/**/*"],
  "exclude": ["node_modules"],
    
}
